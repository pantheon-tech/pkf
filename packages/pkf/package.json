{
  "name": "@pantheon-tech/pkf",
  "version": "1.0.0",
  "description": "Project Knowledge Framework - Declarative documentation management CLI",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "bin": {
    "pkf": "./dist/cli.js"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "pkf",
    "documentation",
    "validation",
    "markdown",
    "frontmatter",
    "schema",
    "cli"
  ],
  "author": "Pantheon Tech",
  "license": "MIT",
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^12.1.0"
  },
  "peerDependencies": {
    "@pantheon-tech/pkf-processor": "^1.0.0",
    "@pantheon-tech/pkf-validator": "^1.0.0"
  },
  "peerDependenciesMeta": {
    "@pantheon-tech/pkf-processor": {
      "optional": true
    },
    "@pantheon-tech/pkf-validator": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com",
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pantheon-tech/pkf.git",
    "directory": "packages/pkf"
  }
}
