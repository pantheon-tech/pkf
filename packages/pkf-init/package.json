{
  "name": "@pantheon-tech/pkf-init",
  "version": "1.0.0",
  "description": "AI-assisted PKF initialization for existing projects",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "bin": {
    "pkf-init": "./dist/cli.js"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "publishConfig": {
    "registry": "https://npm.pkg.github.com",
