{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://pkf.dev/schemas/pkf-schema-dsl.schema.json",
  "title": "PKF Schema DSL",
  "description": "JSON Schema for validating PKF Schema DSL (schemas.yaml)",
  "type": "object",
  "required": ["version", "schemas"],
  "properties": {
    "version": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+$",
      "description": "Schema DSL version (e.g., '1.0')"
    },
    "schemas": {
      "type": "object",
      "description": "Document type schema definitions",
      "patternProperties": {
        "^[a-z][a-z0-9-]*$": {
          "$ref": "#/definitions/schemaDefinition"
        }
      },
      "additionalProperties": false
    }
  },
  "definitions": {
    "schemaDefinition": {
      "type": "object",
      "properties": {
        "_extends": {
          "type": "string",
          "description": "Parent schema to extend from"
        },
        "_description": {
          "type": "string",
          "description": "Human-readable description"
        },
        "_examples": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Example file paths"
        },
        "_deprecated": {
          "type": "boolean",
          "description": "Whether this schema is deprecated"
        },
        "_version": {
          "type": "string",
          "description": "Schema version"
        },
        "properties": {
          "type": "object",
          "description": "Property definitions",
          "patternProperties": {
            "^[a-z][a-z0-9_-]*$": {
              "$ref": "#/definitions/propertyDefinition"
            }
          }
        }
      },
      "required": ["properties"]
    },
    "propertyDefinition": {
      "type": "object",
      "required": ["type"],
      "properties": {
        "type": {
          "type": "string",
          "enum": ["string", "number", "boolean", "date", "array", "object"],
          "description": "Property type"
        },
        "required": {
          "type": "boolean",
          "default": false,
          "description": "Whether property is required"
        },
        "description": {
          "type": "string",
          "description": "Property description"
        },
        "default": {
          "description": "Default value or placeholder"
        },
        "enum": {
          "type": "array",
          "minItems": 1,
          "description": "Allowed values"
        },
        "pattern": {
          "type": "string",
          "description": "Regex pattern for validation"
        },
        "minimum": {
          "type": "number",
          "description": "Minimum value (for numbers)"
        },
        "maximum": {
          "type": "number",
          "description": "Maximum value (for numbers)"
        },
        "minLength": {
          "type": "number",
          "description": "Minimum string length"
        },
        "maxLength": {
          "type": "number",
          "description": "Maximum string length"
        },
        "items": {
          "type": "object",
          "description": "Array item schema"
        },
        "minItems": {
          "type": "number",
          "description": "Minimum array length"
        },
        "maxItems": {
          "type": "number",
          "description": "Maximum array length"
        },
        "uniqueItems": {
          "type": "boolean",
          "description": "Whether array items must be unique"
        }
      }
    }
  }
}
